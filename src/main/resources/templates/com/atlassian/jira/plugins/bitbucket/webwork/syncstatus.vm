#* @vtlvariable name="action" type="com.atlassian.jira.plugins.bitbucket.webwork.ConfigureBitbucketRepositories" *#

<div style="text-align: center">

    #if ($action.getSyncProgress().isUnknown())
        <p>Currently Processing Changesets</p>
    #elseif ($action.getSyncProgress().isCompleted())
        <script type="text/javascript">syncComplete = true;</script>
        <strong>Sync Processing Complete</strong>
    #elseif($action.getSyncProgress().isTip())
        <p>Currently Processing Changesets from <strong>tip</strong></p>
    #else
        <p>Currently Processing Changesets from <strong>$action.getSyncProgress().getStartRevision()</strong>
            to <strong>$action.getSyncProgress().getEndRevision()</strong></p>
    #end

    <p>$action.getJIRACommitTotal() Commits with JIRA Project Key $action.getProjectKey()  found</p>

    #if (!$action.getSyncProgress().isCompleted())
        <img src='${baseurl}/download/resources/com.atlassian.jira.plugins.jira-bitbucket-connector-plugin/images/loading_barber_pole_horz.gif'>
    #end


</div>

