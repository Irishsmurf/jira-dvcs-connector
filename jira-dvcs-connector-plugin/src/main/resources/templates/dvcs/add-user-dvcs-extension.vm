<script type="text/javascript">

	AJS.messages.info("#configureGroupsContentWorking", {
   		title:"Loading list of groups from Bitbucket...",
   		closeable: false
			});
			
	// load web fragment
	jQuery.ajax({
				type : 'GET',
				url : "${baseurl}/rest/bitbucket/1.0/fragment/groups",
				success :
				function (data) {
					jQuery("#configureGroupsContentWorking").hide();
					jQuery("#configureGroupsContent").html(data);
					jQuery("#configureGroupsContent").show();
				}
			}).error(function (err) { 
				jQuery("#configureGroupsContentWorking").empty();
				AJS.messages.warning("#configureGroupsContentWorking", {title:"Unexpected error occurred when retrieving list of groups from Bitbucket.", closeable: false});
				jQuery("#configureGroupsContentWorking").show();
		});

</script>

<div>
	<div id="configureGroupsContentWorking"/>
    <div id="configureGroupsContent" style="display:none"/>
</div>

