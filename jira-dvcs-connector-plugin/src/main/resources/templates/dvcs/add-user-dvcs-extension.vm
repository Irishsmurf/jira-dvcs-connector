#if(!$bbSupressRender)

	<fieldset class="field-group" style="max-height: 300px; overflow: auto">
	  
	  <label>Bitbucket Accounts</label>
	  
	  <div class="" style="font-size: 0.9em; top: 3px; position: relative; padding-bottom: 3px;">
	  	Add the new user to the following Bitbucket groups:
	  </div>
	
	  #foreach ($bbOrg in $bbOrgaizations)
	  	<div class="checkbox" style="padding-left: 0px">
	    	<label><strong>$bbOrg.name</strong></label>
	    	 #foreach ($group in $bbOrg.getGroups())
	    	 	<div style="margin-left: 10px">
	    	 		<input id="dvcs_org_selector_${bbOrg.id}_$group.slug"" class="checkbox" type="checkbox" id="dvcs_org_selector_$group.slug" value="${bbOrg.id}:$group.slug" name="dvcs_org_selector" />
	    	 		<label for="dvcs_org_selector_${bbOrg.id}_$group.slug"> $group.niceName </label>
	    	 	</div>
	    	 #end
	  	</div>
	  #end
	
	</fieldset>

#end